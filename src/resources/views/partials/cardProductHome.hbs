<div class="item card h-100 position-relative flex-column justify-content-between mx-1"
    style="box-shadow: 0 1px 2px 0 rgba(60, 64, 67, .1), 0 2px 6px 2px rgba(60, 64, 67, .15);">
    <a href="/product/{{this.slug}}/">
        {{{showTagDiscount this.discount}}}
        {{{showTagBusiness this.isBusiness}}}
        <div
            style="background-image: url('{{showImgUpload this.images}}'); height: 260px; background-size: contain; background-position: center; background-repeat: no-repeat;">
        </div>
        <div class="p-2">
            <p class="card-text fw-bold fs-6 text-ellipsis">
                {{this.name}}
            </p>
            {{{showPriceInCard this.variation.price this.discount}}}
        </div>
    </a>
    {{{showRatingStar this.reviews this.variation}}} 
</div>