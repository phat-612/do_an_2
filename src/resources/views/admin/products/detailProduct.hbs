<div class="container">
  <div class="d-flex justify-content-between my-3">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" {{isRadio product.isBusiness true}}
        disabled>
      <label class="form-check-label" for="flexCheckChecked">
        Đang Kinh Doanh
      </label>
    </div>
    <a href="/admin/product/{{product._id}}/edit" class="btn btn-success">Chỉnh
      Sửa</a>
  </div>
  <div class="row">
    <div class="col">
      <h4>Tên Sản phẩm</h4>
      <p>{{product.name}}</p>
      <h4>Danh mục</h4>
      <p>
        {{#each product.category}}
        {{this}}/
        {{/each}}
      </p>

      <h4>Thương Hiệu</h4>
      <p>{{product.brand}}</p>
    </div>
    <div class="col">
      <h4>Mô Tả Sản Phẩm</h4>
      <div class="overflow-auto">
        <p style="max-height: 350px;">{{product.description}}</p>
      </div>
    </div>
  </div>
  <div>
    <table class="table-based table table-hover">
      <thead>
        <tr>
          <th class="th1">{{#each product.variations}}{{#if @first}}{{#each
            this.attributes
            }}{{#if @first}}{{@key}}{{/if}}{{/each}}{{/if}}{{/each}}</th>
          <th class="th2">{{#each product.variations}}{{#if @first}}{{#each
            this.attributes
            }}{{#if @last}}{{@key}}{{/if}}{{/each}}{{/if}}{{/each}}</th>
          <th>Giá</th>
          <th>Số lượng</th>
        </tr>
      </thead>
      <tbody>
        {{#each product.variations}}
        <tr>
          <td class="td1">{{#each this.attributes}}{{#if
            @first
            }}{{this}}{{/if}}{{/each}}</td>
          <td class="td2">{{#each this.attributes}}{{#if
            @last
            }}{{this}}{{/if}}{{/each}}</td>
          <td>{{this.price}}</td>
          <td>{{this.quantity}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="row w-75 my-4">
    <h4>Giảm Giá</h4>
    <div class="col">
      <label for="" class="form-label fs-5">Số phần trăm giảm :</label>
      <p>{{product.discount.percent}}</p>
    </div>
    <div class="col">
      <label for="" class="form-label fs-5">Ngày bắt đầu :</label>
      <p>{{formatDate product.discount.startDay "DD/MM/YYYY"}}</p>
    </div>
    <div class="col">
      <label for="" class="form-label fs-5">Ngày kết thúc :</label>
      <p>{{formatDate product.discount.endDay "DD/MM/YYYY"}}</p>
    </div>
  </div>
  <div class="row">
    <h4>Danh Sách Ảnh</h4>
    {{#each product.images}}
    <img src="{{showImgUpload this}}" alt="" class="col-3" />
    {{/each}}
  </div>
</div>

