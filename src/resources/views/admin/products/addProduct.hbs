<form action="" method="" class="addPro-body">
 <div class="row g-2">
    <div class="col-md">
    <label for="name-Product" class="form-label"><h4>Tên Sản phẩm</h4></label>
    <input type="text" class="form-control" id="name-Product" placeholder="Nhập tên Sản Phẩm" />
  </div>
  <div class="col-md">
    <label for="categoryDataList" class="form-label"><h4>Danh Mục</h4></label>
<input class="form-control" list="categoryOptions" id="categoryDataList" placeholder="Nhập Danh Mục">
<datalist id="categoryOptions">
  <option value="Điện thoại">
  <option value="Laptop">
</datalist>
  </div>
 </div>
  
  <div class="row g-2">
    <div class="col-md description-Product">
    <label for="description-Product" class="col-form-label"><h4>Mô Tả Sản Phẩm</h4></label>
    <textarea class="form-control" id="description-Product" placeholder="Nhập Mô Tả Sản Phẩm"></textarea>
  </div>
  <div class="col-md brand">
    <label for="brandDataList" class="form-label"><h4>Thương Hiệu</h4></label>
<input class="form-control" list="BrandOptions" id="brandDataList" placeholder="Nhập Thương Hiệu">
<datalist id="BrandOptions">
  <option value="SamSung">
  <option value="Apple">
  <option value="Xiaomi">
</datalist>
  </div>
 </div>

  
  {{! ===================================================================== }}
  <div class="row g-2">
    <div class="col-md uploadImg-Product">
    <div class="mb-3">
      <label for="multiImageUpload" class="form-label"><h4>Tải Ảnh Lên</h4></label>
      <input
        type="file"
        class="form-control"
        id="multiImageUpload"
        accept="image/*"
        multiple
      />
    </div>
    <div class="mb-3">
      <p>Danh sách Ảnh :</p>
      <div id="multiImagePreview" class="row"></div>
    </div>
  </div>
  <div class="col-md">
    <div class="addDetail-btn-div">
      <button type="button" class="btn btn-success">Thêm Chi Tiết</button>
    </div>
    <div class="detail-div">
      <div class="detail-box-div">
        <div class="btn-div position-relative">
          {{!-- btn thêm thuoc tính --}}
          <button type="button" class="btn btn-success position-absolute addAttribute-btn"><i class="bi bi-plus-circle-fill"></i></button>
          {{!-- btn xóa thuoc tính --}}
          <button type="button" class="btn btn-danger position-absolute removeAttribute-btn"><i class="bi bi-trash"></i></button>
        </div>
        <div class="attribute-div row g-2">
          <div class="col-md">
            <input class="form-control" list="asd" id="" placeholder="">
            <datalist id="asd">
              <option value="123">
            </datalist>
          </div>
          <div class="col-md">
            <input class="form-control" list="asdc" id="" placeholder="">
            <datalist id="asdc">
              <option value="12345">
            </datalist>
          </div>
        </div>
      </div>
    </div>
  </div>
 </div>
  

  

</form>