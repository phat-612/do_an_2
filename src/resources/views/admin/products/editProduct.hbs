<form action="">

  <div class="container">
    <label for="name-Product" class="form-label fs-4">Tên Sản phẩm</label>
    <input type="text" class="form-control" id="name-Product" value="{{product.name}}" />
    <label for="description-Product" class="col-form-label fs-4">Mô Tả Sản Phẩm</label>
    <textarea class="form-control" id="description-Product">{{product.description}}</textarea>
    <label for="categoryDataList" class="form-label fs-4">Danh Mục</label>
    <input class="form-control" list="categoryOptions" id="categoryDataList" value="Điện Thoại">
    <datalist id="categoryOptions">
        <option value="Điện thoại">
        <option value="Laptop">
    </datalist>
    <label for="brandDataList" class="form-label fs-4">Thương Hiệu</label>
    <input class="form-control" list="BrandOptions" id="brandDataList" value="Apple">
    <datalist id="BrandOptions">
        <option value="SamSung">
        <option value="Apple">
    </datalist>
   {{!-- -------------------------------- --}}
      <label for="brandDataList" class="form-label fs-4 mt-3">Thuộc Tính</label>
      <div class="w-75 container-sm py-4 my-4 border rounded">
         <div class="row">
            <div class="col-md-6">
               <label for="ipNameAttributePro1" class="form-label fs-5">Nhập Tên Thuộc tính</label>
            </div>
            <div class="col-md-6">
               <input type="text" id="inpNameAttributePro1" class="form-control" value="Ram">
            </div>
            <div class="col-md-6 my-3">
               <label for="" class="form-label fs-5">Nhập Thuộc Tính</label>
            </div>
            <div class="col-md-6 my-3" id="inputAttribute1Div">
               <button type="button" class="btn btn-success form-control addAttribute1-btn">Thêm Thuộc Tính</button>
               <div class="row">
                  <input type="text" id="thuocTinh1" class="form-control my-2 col" value="8GB">
                  <button type="button" class="btn btn-danger col-2 my-2" onclick="deleteAttribute(event)">Xóa</button>
               </div>
               <div class="row">
                  <input type="text" id="thuocTinh1" class="form-control my-2 col" value="16GB">
                  <button type="button" class="btn btn-danger col-2 my-2" onclick="deleteAttribute(event)">Xóa</button>
               </div>
            </div>
         </div>
     </div>
     {{!-- =============================== --}}
     <div class="w-75 container-sm py-4 my-4 border rounded Attribute2div">
      <div class="row">
         <div class="col-md-6">
            <label for="inpNameAttributePro2" class="form-label fs-5">Nhập Tên Thuộc Tính</label>
         </div>
         <div class="col-md-6">
            <input type="text" id="inpNameAttributePro2" class="form-control" value="Màu Sắc">
         </div>
         <div class="col-md-6 my-3">
            <label for="" class="form-label fs-5">Nhập Thuộc Tính</label>
         </div>
         <div class="col-md-6 my-3" id="inputAttribute2Div">
            <button type="button" class="btn btn-success form-control addAttribute2-btn">Thêm Thuộc Tính</button>
            <div class="row">
               <input type="text" id="thuocTinh2" class="form-control my-2 col" value="Đỏ">
               <button type="button" class="btn btn-danger col-2 my-2" onclick="deleteAttribute(event)">Xóa</button>
            </div>
            <div class="row">
               <input type="text" id="thuocTinh2" class="form-control my-2 col" value="Xanh">
               <button type="button" class="btn btn-danger col-2 my-2" onclick="deleteAttribute(event)">Xóa</button>
            </div>
         </div>
      </div>
     </div>
     {{!-- ------------------------- --}}
      <table id="custom-varriant" class="table-based table ">
         <thead>
            <tr>
               <th>Ram</th>
               <th>Màu sắc</th>
               <th>Giá</th>
               <th>Số lượng</th>
            </tr>
         </thead>
         <tbody>
            <tr>
               <td rowspan="2">8GB</td>
               <td>Đỏ</td>
               <td>1300</td>
               <td>1200</td>
            </tr>
            <tr>
               <td>Xanh</td>
               <td>1300</td>
               <td>1200</td>
            </tr>
            <tr>
               <td rowspan="2">16GB</td>
               <td>Đỏ</td>
               <td>1300</td>
               <td>1200</td>
            </tr>
            <tr>
               <td>Xanh</td>
               <td>1300</td>
               <td>1200</td>
            </tr>
         </tbody>
      </table>
      {{!-- ------------------------- --}}
      <div class="row w-75 my-4"> 
         <div class="col">
            <label for="" class="form-label fs-5">Nhập số phần trăm giảm :</label>
            <div class="input-group">
               <input type="number" class="form-control" max="100" min="0" oninput="this.value = Math.abs(this.value)" required>
               <span class="input-group-text">%</span>
            </div>
         </div>
         <div class="col">
            <label for="" class="form-label fs-5">Ngày bắt đầu :</label>
            <input type="date" name="" id="" class="form-control">
         </div>
         <div class="col">
            <label for="" class="form-label fs-5">Ngày kết thúc :</label>
            <input type="date" name="" id="" class="form-control">
         </div>
      </div>
     {{!-- ------------------------- --}}
      <div class="mb-3">
         <label for="multiImageUpload" class="form-label fs-4">Tải Ảnh Lên (TỐI ĐA 8 ẢNH)</label>
         <input
            type="file"
            class="form-control"
            id="multiImageUpload"
            accept="image/*"
            multiple
            />
      </div>
      <div class="mb-3">
         <p>Danh sách Ảnh :</p>
         <div id="multiImagePreview" class="row"></div>
      </div>
  </div>

</form>