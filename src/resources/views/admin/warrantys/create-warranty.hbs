<div class="container">
  <form
    id="form"
    method="post"
    action="/api/storeWarranty"
  >
    <div class="row mt-4">  
      <div class="col-6">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            required
            type="email"
            class="form-control"
            id="email"  
            name="email"
          />
        </div>  
        <div class="mb-3">
          <label for="name" class="form-label">HoVaTen</label>
          <input
            required
            type="name"
            name="name"
            class="form-control"
            id="name"
          />
        </div>
      </div>
      <div class="col-6">
        <div class="mb-3">
          <label for="phone" class="form-label">Sodienthoai</label>
          <input
            required
            type="phone"
            name="phone"
            class="form-control"
            id="phone"
          />
        </div>
        <div class="mb-3">
          <label for="address" class="form-label">Diachi</label>
          <input
            required
            type="address"
            name="address"
            class="form-control"
            id="address"
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="note" class="form-label">Ghi chú</label>
        <input
          required
          type="text"
          name="note"
          class="form-control"
          id="note"
        />
      </div>
      <div class="col w-100">
        <label for="detail" class="form-label">Sản phẩm</label>
        <div class="row">
          <div class="col">
            <input
              class="form-control"
              list="datalistOptions"
              id="detail"
              required
            />
            <datalist id="datalistOptions">
              {{#each products}}
                <option id="{{this._id}}">{{this.name}}</option>
              {{/each}}
            </datalist>
          </div>
          <div class="col-1">
            <button
              class="btn btn-success w-100"
              type="button"
              id="addProduct"
            >Thêm</button>
          </div>
        </div>
      </div>
      <div id="addInput"></div>
      <div class="form-group my-4">
        <button type="submit" class="btn btn-primary">Tạo</button>
      </div>
    </div>
  </form>
</div>