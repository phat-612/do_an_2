<div class="container mt-3">
  <div class="row">
    <div class="col mx-2 rounded">
      <img
        src="https://cdn2.cellphones.com.vn/insecure/rs:fill:690:300/q:90/plain/https://dashboard.cellphones.com.vn/storage/s24-sliding-pha-gia.png"
        class="card-img-top rounded"
        alt="sd"
      />
    </div>
    <div class="col-3 bg-dark rounded">sdfsd</div>
  </div>
  {{! sản phẩm nổi bậc cho từng danh mục, mỗi mục 10 sản phẩm được xem nhiều nhất }}
  {{#each categories}}
    {{#if this.products}}
      <div class="mt-3">
        <div class="row d-flex align-items-center">
          <a
            href="/{{this.slug}}"
            class="col-auto fs-4 text-uppercase text-black"
          >{{this.name}}</a>
          <div class="col">
            <ul class="nav">
              {{#each this.children}}
                <li>
                  <a
                    href="/{{../this.slug}}/{{this.slug}}"
                    class="btn btn-outline-light px-2 ms-2 custom-bg-gray text-black"
                  >{{this.name}}</a>
                </li>
              {{/each}}
              <li>
                <a
                  href="/{{this.slug}}"
                  class="btn btn-outline-light px-2 ms-2 custom-bg-gray text-black"
                >Xem tất cả</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="owl-carousel owl-theme">
          {{#each this.products}}
            <div class="item card h-100 shadow-sm position-relative flex-column justify-content-between mx-1">
              {{{showTagDiscount this.discount}}}
              <img
                src="{{showImgUpload this.images}}"
                class="rounded"
                alt="sd"
              />
              <div class="p-2">
                <p class="card-text fw-bold fs-5">
                  {{this.name}}
                </p>
                <p class="card-text text-decoration-line-through">
                  {{showDefaultPrice this.variations}}
                </p>
                <p class="card-text text-danger fs-4 fw-medium">
                  {{showDiscountPrice this.variations this.discount}}
                </p>
                <div class="ratings">
                  <i class="bi bi-star"></i>
                  <i class="bi bi-star"></i>
                  <i class="bi bi-star"></i>
                  <i class="bi bi-star"></i>
                  <i class="bi bi-star"></i>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  {{/each}}
</div>