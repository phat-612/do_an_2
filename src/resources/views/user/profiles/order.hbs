<div class="container">
  <div class="custom-mw-720px m-auto">
    <div class="text-center">
      <a class="float-start fs-2"><i class="bi bi-arrow-left"></i></a>
      <span class="fs-1">Thông tin</span>
    </div>
    <div class="gap-3 d-grid mt-3">
      {{consoleHbs cart}}
      {{#each cart.items}}
        <div class="row">
          <div class="col-3"><img
              src="https://cdn2.cellphones.com.vn/100x100,webp,q100/media/catalog/product/2/_/2_352_2.jpg"
              alt=""
            /></div>
          <div class="col-9">
            <h4>{{this.name}}</h4>
            <div class="d-flex justify-content-between">
              <p class="text-danger fs-5">{{showPrice this.price}}</p>
              <p>Số lượng:
                <span class="text-danger">{{this.quantity}}</span></p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="mt-3">
      <h5 class="text-capitalize">thông tin nhận hàng<button
          class="float-end"
        >Thêm địa chỉ mới</button></h5>
      <div class="listAddress">
        <div class="row">
          <div class="col-1">
            <input type="checkbox" name="" id="" />
          </div>
          <div class="col-11">
            <div>Nhà riêng
            </div>
            <div>luan phat phuong hung | 03829099022</div>
            <div>26/12 hẻm 11 lê hồng phông</div>
          </div>
        </div>
      </div>
      <div class="newAddress d-none">
        <div>
          <label for="">Tên gợi nhớ</label>
          <input type="text" class="form-control" />
        </div>
        <div>
          <label for="">Tên người nhận</label>
          <input type="text" class="form-control" />
        </div>
        <div>
          <label for="">Số điện thoại</label>
          <input type="text" class="form-control" />
        </div>
        <div>
          <label for="">Địa chỉ</label>
          <input type="text" class="form-control" />
        </div>
      </div>
      <div>
        <h5>Phương thức thanh toán</h5>
        <div class="">
          <button class="chosePaymentMethod py-1 px-3 rounded" data-bs-method="0">Thanh toán khi nhân hàng</button>
          <button class="chosePaymentMethod py-1 px-3 rounded" data-bs-method="1">Thanh toán trực tuyến</button>
      </div>
      <div class="mt-3 border p-2">
        <div class="d-flex justify-content-between">
          <h3>Tổng tiền:</h3>
          <p class="text-danger fs-3">{{showPrice cart.totalPrice}}</p>
        </div>
        <button class="btnSubmit w-100 bg-danger text-white py-2 fs-4 rounded">Đặt hàng</button>
      </div>
    </div>
  </div>
</div>