          <div class="col-8"><a href="/me/order"
              class="btn w-100 py-3 rounded border bg-danger fs-4 text-white fw-bold">Mua Ngay</a></div>
          <div class="col-4">
            <form action="/api/cart" method="post">
              <input type="hidden" name="idVariation" value="{{product.curVariation._id}}" hidden />
              <input type="hidden" name="quantity" value="1" hidden />
              <button type="submit" class="w-100 py-3 rounded border bg-light fs-5 fw-bold">Thêm vào giỏ hàng</button>
            </form>
          </div>
        </div>
      </div>
