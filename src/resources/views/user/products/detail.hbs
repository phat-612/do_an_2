{{!-- modal đánh gửi đánh giá --}}
<div class="modal fade" id="sendReviewModal" tabindex="-1" aria-labelledby="sendReviewModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="sendReviewModalLabel">Đánh giá và nhận xét</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div>
            <img src="{{showImgUpload product.images}}" style="width: 60px;" alt="">
            <span>sản phẩm samsung galaxy s24</span>
          </div>
          <div>
            <p>Đánh giá chung</p>
            <div class="rating d-flex justify-content-around">
              <input hidden type="radio" name="rating" value="5" id="5">
              <label for="5"><span class="fs-2 fa fa-star text-warning"></span></label>
              <input hidden type="radio" name="rating" value="4" id="4">
              <label for="4"><span class="fs-2 fa fa-star text-warning"></span></label>
              <input hidden type="radio" name="rating" value="3" id="3">
              <label for="3"><span class="fs-2 fa fa-star text-warning"></span></label>
              <input hidden type="radio" name="rating" value="2" id="2">
              <label for="2"><span class="fs-2 fa fa-star text-warning"></span></label>
              <input hidden type="radio" name="rating" value="1" id="1">
              <label for="1"><span class="fs-2 fa fa-star text-warning"></span></label>
            </div>
          </div>
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Chia sẻ cảm nhận</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
        <div class="d-flex justify-content-end gap-3">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Gửi đánh giá</button>
        </div>
      </div>
    </div>
  </div>
