<div class="container">
  <form method="post" action="/api/storeWarranty" enctype="multipart/form-data">
    <div class="mt-4 row">
      <div class="col-md-6">
        <div class="form-group my-4">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            id="inputEmail4"
            placeholder="Email"
            name="email"
            readonly
            value="{{warranty.email}}"
          />
        </div>
        <div class="form-group my-4">
          <label for="name">HoVaTen</label>
          <input
            type="text"
            class="form-control"
            placeholder="HoVaTen"
            id="name"
            name="name"
            readonly
            value="{{warranty.name}}"
          />
        </div>
        <div class="form-group my-4">
          <label for="phone">Số Điện Thoại</label>
          <input
            type="text"
            class="form-control"
            id="phone"
            placeholder="Nhập số điện thoại"
            name="phone"
            readonly
            value="{{warranty.phone}}"
          />
        </div>
        <div class="form-group my-4">
          <label for="address">Địa Chỉ</label>
          <input
            type="text"
            class="form-control"
            placeholder="Địa Chỉ"
            name="address"
            id="address"
            value="{{warranty.address}}"
            readonly
          />
        </div>
        <div class="form-group my-4">
          <label for="note">Ghi Chú</label>
          <input
            type="text"
            class="form-control"
            placeholder="Địa Chỉ"
            name="note"
            id="note"
            value="{{warranty.note}}"
            readonly
          />
        </div>
      </div>
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group my-4">
              <label for="images">Hình ảnh</label>
              <div id="images">
                {{#each warranty.images}}
                  <img src="/img/uploads/{{this}}" alt="" class="w-25" />
                {{/each}}
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group my-4">
              <ul>
                {{#each productsAndReasons}}
                  <li>
                    <strong>Sản phẩm:</strong>
                    {{productName}}<br />
                    <strong>Lý do:</strong>
                    {{reason}}<br />
                    <strong>Giá:</strong>
                    {{price}}
                  </li>
                {{/each}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group col-md-2 my-4">
      <a
        href="/admin/warranty/{{warranty._id}}/edit"
        class="btn btn-primary"
      >Chỉnh Sửa</a>
    </div>
  </form>
</div>