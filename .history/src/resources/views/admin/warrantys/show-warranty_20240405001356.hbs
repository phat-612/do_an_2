<div class="m-4">

  <a href="/admin/warranty/create" class="btn btn-secondary btn-sm">Tạo đơn bảo
    hành</a>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Email</th>
        <th scope="col">HovaTen</th>
        <th scope="col" class="col-1">HinhAnh</th>
        <th scope="col">Diachi</th>
        <th scope="col">Sodienthoai</th>
      </tr>
    </thead>
    <tbody>
      {{#each warrantys}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.email}}</td>
          <td>{{this.name}}</td>
          <td>
            {{#each images}}
              {{#if @first}}
                <img src="/img/uploads/{{this}}" alt="" class="w-75" />
              {{/if}}
            {{/each}}
          </td>
          <td>{{this.address}}</td>
          <td>{{this.phone}}</td>
          <td>
            <a
              href="/admin/warranty/{{this._id}}/deltail"
              class="btn btn-link"
            >Chi tiết</a>
            <a
              href="/amin/warranty/{{this._id}}/delete"
              class="btn btn-link deleteWarranty"
              data-id="{{this._id}}"
            >Xóa</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{! delete }}
<form
  name="delete-warranty"
  method="post"
  action="../../admin/warrantys/{{warranty._id}}?_method=PUT"
></form>