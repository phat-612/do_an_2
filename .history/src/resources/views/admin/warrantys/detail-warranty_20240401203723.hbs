<div class="container">
  <form method="post" action="/api/storeWarranty" enctype="multipart/form-data">
    <div class="mt-4 row">
      <div class="form-group col-md-6 my-4">
        <label for="email">Email</label>
        <input
          type="email"
          class="form-control"
          id="inputEmail4"
          placeholder="Email"
          name="email"
          readonly
          value="{{warrantys.email}}"
        />
      </div>
      <div class="form-group col-md-6 my-4">
        <label for="name">HoVaTen</label>
        <input
          type="text"
          class="form-control"
          placeholder="HoVaTen"
          id="name"
          name="name"
          readonly
          value="{{warrantys.name}}"
        />
      </div>
      <div class="form-group col-md-6 my-4">
        <label for="phone">Số Điện Thoại</label>
        <input
          type="text"
          class="form-control"
          id="phone"
          placeholder="Nhập số điện thoại"
          name="phone"
          readonly
          value="{{warrantys.phone}}"
        />
      </div>
      <div class="form-group col-md-6 my-4">
        <label for="address">Địa Chỉ</label>
        <input
          type="text"
          class="form-control"
          placeholder="Địa Chỉ"
          name="address"
          id="address"
          value="{{warrantys.address}}"
          readonly
        />
      </div>
      <div class="form-group col-md-6 my-4">
        <label for="note">Ghi chú</label>
        <input
          type="text"
          class="form-control"
          id="note"
          name="note"
          readonly
          value="{{warrantys.note}}"
        />
      </div>

      <div class="form-group col-md-6 my-4">
        <label for="detail">Sản phẩm</label>
        <input
          type="text"
          class="form-control"
          id="detail"
          name="detail"
          readonly
          value="{{#each productNames}}{{this}}{{/each}}"
        />
      </div>
      <div class="form-group col-md-6 my-4">
        <label for="images">Hình ảnh</label>
        <div id="images">
          <img src="/img/uploads/{{warrantys.images}}" alt="" class="w-25" />
        </div>
      </div>
    </div>
    <div class="form-group col-md-2 my-4">
      <a
        href="/admin/warranty/{{warrantys._id}}/edit"
        class="btn btn-primary"
      >Chỉnh Sửa</a>
    </div>
  </form>
</div>