<div class="container">
  <form method="POST" action="/api/warranty/{{warranty._id}}?_method=PUT">
    <div class="mt-4 row">
      <div class="col-md-6">
        <div class="form-group my-4">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="Email"
            name="email"
            value="{{warranty.email}}"
            required
          />
        </div>
        <div class="form-group my-4">
          <label for="name">HoVaTen</label>
          <input
            type="text"
            class="form-control"
            placeholder="HoVaTen"
            id="name"
            name="name"
            value="{{warranty.name}}"
            required
          />
        </div>
        <div class="form-group my-4">
          <label for="phone">Số Điện Thoại</label>
          <input
            type="text"
            class="form-control"
            id="phone"
            placeholder="Nhập số điện thoại"
            name="phone"
            value="{{warranty.phone}}"
            required
          />
        </div>
        <div class="form-group my-4">
          <label for="address">Địa Chỉ</label>
          <input
            type="text"
            class="form-control"
            placeholder="Địa Chỉ"
            name="address"
            id="address"
            value="{{warranty.address}}"
            required
          />
        </div>
        <div class="form-group my-4">
          <label for="note">Ghi Chú</label>
          <input
            type="text"
            class="form-control"
            placeholder="Địa Chỉ"
            name="note"
            id="note"
            value="{{warranty.note}}"
            required
          />
        </div>
      </div>
      <div class="col-md-6">
        <div class="row">

          <div class="col-md-12">
            <div class="form-group my-4">
              {{!  }}
              <div class="row">
                {{#each productsAndReasons}}
                  <div class="col-6">
                    <div class="table-responsive">
                      <div>
                        <strong>Tên sản phẩm:</strong>
                        <input
                          type="text"
                          name="productName"
                          id="productName"
                          value="{{this.productName}}"
                          required
                        />
                      </div>
                      <div>
                        <strong>Lý do bảo hành:</strong>
                        <ul>
                          {{#each this.reasonsAndPrices}}
                            <li>
                              <input
                                type="text"
                                name="reason"
                                value="{{this.reason}}"
                                required
                              />:
                              <input
                                type="number"
                                name="price"
                                value="{{this.price}}"
                                required
                              />
                            </li>
                          {{/each}}
                        </ul>
                      </div>
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group col-md-2 my-4">
      <button type="submit" class="btn btn-primary">Lưu chỉnh sửa</button>
    </div>
  </form>
</div>